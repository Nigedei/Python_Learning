x = 10
y = 7

addition = x + y            #     -->     15
subtraction = x - y         #     -->     3
multiplication = x * y      #     -->     70
division = x / y            #     -->     1.4285714285714286
modulo = x & y              #     -->     3
exponentiation = x ** y     #     -->     10,000,000
floor_division = x // y     #     -->     1  (rounds down to next int)

# x = (floor_division*y) + modulo -->     10
